@model IdentityServer.Areas.HeliosAdminUI.Models.IdentityResources.IdentityResourceViewModel;

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Delete your api scope</h4>
        <hr />
        <form method="post" asp-controller="IdentityResources" asp-action="Delete" asp-route-id="@Model.Id">
            <p>Are you sure you want to delete <strong>@Model.Name</strong>? <br /> The action will be irreversible.</p>
            <button class="btn btn-danger btn-block">Delete <i class="bi bi-trash ml-1"></i></button>
        </form>
    </div>
</div>