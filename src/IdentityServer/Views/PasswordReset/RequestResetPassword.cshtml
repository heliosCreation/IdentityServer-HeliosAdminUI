@model IdentityServer.Quickstart.PasswordReset.RequestResetPasswordViewModel;

@{
    ViewData["Title"] = "Reset";
}
<div>
    <div class="page-header">
        <h1>Password Reset</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Forgot your password? Don't worry you can easily reset it. </h3>
                </div>
                <div class="panel-body">
                    <form asp-controller="PasswordReset" asp-action="RequestResetPassword">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Username"
                                       asp-for="Email" autofocus>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary">I want to reset my password</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

